{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "public",
        "rootDir": ".",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node"
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": { "rewriteTsconfig": false },
    "exclude": [
        "etc",
        "src",
        "node_modules",
        "typings"
    ]

}
